# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Health Records API
DEBUG=true

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["TXT", "PDF", "JPG", "JPEG"]

# AI Service Configuration
